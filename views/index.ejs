    <form name="form1" method="post" onsubmit="return processFormSubmission();">
      <div class="mb-3">
        <label for="fname" class="form-label">First Name</label>
        <input type="text" name="fname" class="form-control" id="fname" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
        <label for="sname" class="form-label">Surname</label>
        <input type="text" name="lname" class="form-control" id="sname" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
        <label for="date" class="form-label">Date of vaccination</label>
        <input type="date" name="vdate" class="form-control" id="date_var" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
        <label for="type" class="form-label">Type of Vaccine</label>
        <input type="text" name="vname" class="form-control" id="type_var" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Place of vaccination</label>
        <input type="text" name="vplace" class="form-control" id="location" aria-describedby="emailHelp">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
